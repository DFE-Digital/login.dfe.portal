<div class="grid-row">
    <div class="col-8">
        <h1 class="heading-xlarge">
            Change password
        </h1>
        <form method="post" id="form-change-password">
            <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
            <fieldset>
                <legend class="vh">Change password form</legend>
                <div class="form-group <%= locals.validationMessages.oldPassword ? 'form-group-error' : '' %>">
                    <label class="form-label-bold" for="oldPassword">Current password</label>
                    <% if (locals.validationMessages.oldPassword) { %>
                    <p class="error-message" id="validation-old-password"><%=locals.validationMessages.oldPassword%></p>
                    <% } %>
                    <input class="form-control" id="oldPassword" name="oldPassword" type="password" required aria-required="true"
                            <% if (locals.validationMessages.oldPassword) { %> aria-invalid="true" aria-describedby="validation-old-password" <% } %> />
                </div>
                <div class="form-group show-password <%= locals.validationMessages.newPassword ? 'form-group-error' : '' %>">
                    <label class="form-label-bold" for="newPassword">Create new password</label>
                    <% if (locals.validationMessages.newPassword) { %>
                    <p class="error-message" id="validation-new-password"><%=locals.validationMessages.newPassword%></p>
                    <% } %>
                    <input class="form-control" id="newPassword" name="newPassword" type="password" required  aria-required="true"
                            <% if (locals.validationMessages.newPassword) { %> aria-invalid="true" aria-describedby="validation-new-password" <% } %>/>
                </div>
                <div class="form-group <%= locals.validationMessages.confirmPassword ? 'form-group-error' : '' %>">
                    <label class="form-label-bold" for="confirmPassword">Confirm new password</label>
                    <% if (locals.validationMessages.confirmPassword) { %>
                    <p class="error-message" id="validation-confirm-password"><%=locals.validationMessages.confirmPassword%></p>
                    <% } %>
                    <input class="form-control" id="confirmPassword" name="confirmPassword" type="password" required  aria-required="true"
                            <% if (locals.validationMessages.confirmPassword) { %> aria-invalid="true" aria-describedby="validation-confirm-password" <% } %>/>
                </div>
                <div class="form-submit">
                    <button type="submit" class="button">Change password</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>